  <script>
    function pedirTaxi() {
      const origen = document.getElementById('origen').value;
      const destino = document.getElementById('destino').value;
      const nombre = document.getElementById('nombre').value;
      const obs = document.getElementById('obs').value;

      if (!origen || !destino) {
        alert('Por favor completÃ¡ origen y destino');
        return;
      }

      let mensaje = `Hola, quiero un taxi ğŸš•%0A` +
        `ğŸ“ Salida: ${origen}%0A` +
        `ğŸ Destino: ${destino}%0A`;

      if (nombre) mensaje += `ğŸ‘¤ Nombre: ${nombre}%0A`;
      if (obs) mensaje += `ğŸ“ Observaciones: ${obs}%0A`;

      const telefono = '5492324564733';
      const url = `https://wa.me/${telefono}?text=${mensaje}`;

      window.open(url, '_blank');
    }
